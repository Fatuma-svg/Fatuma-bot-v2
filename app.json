{
  "name": "fatuma-bot",
  "description": "WhatsApp bot using Baileys with 600+ commands and plugin support",
  "repository": "https://github.com/Fatuma-svg/fatuma-bot-v2.git",
  "keywords": ["node", "whatsapp", "baileys", "bot", "fatuma", "multi-auth", "plugin"],
  "env": {
    "WHATSAPP_OWNER": {
      "description": "Namba ya mmiliki wa bot",
      "value": "255760317060"
    },
    "PREFIX": {
      "description": "Command prefix",
      "value": "!"
    },
    "AUTO_TYPING": {
      "description": "Auto typing (on/off)",
      "value": "on"
    },
    "AUTO_RECORD": {
      "description": "Auto recording (on/off)",
      "value": "on"
    },
    "OPEN_VIEW_ONCE": {
      "description": "Open view once messages (on/off)",
      "value": "on"
    },
    "ONLINE_MODE": {
      "description": "Stay online (on/off)",
      "value": "on"
    },
    "SESSION_FOLDER": {
      "description": "Folder ya sessions (auth)",
      "value": "auth_info_multi"
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "scripts": {
    "start": "node index.js"
  },
  "image": "heroku/nodejs"
}
